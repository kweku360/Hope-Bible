<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kfive.hopebook" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--network permissions-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/hbActionBarTheme" >
        <activity
            android:name="com.kfive.hopebook.activities.HbHome"
            android:label="@string/title_activity_hb_home"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbBooksAll"
            android:label="@string/title_activity_hb_books_all" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbChapterList"
            android:label="@string/title_activity_hb_chapter_list" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbVerses"
            android:label="@string/title_activity_hb_verses" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbBibleText"
            android:label="@string/title_activity_hb_bible_text" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbSearchPage"
            android:label="@string/title_activity_hb_search_page" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbSearchResult"
            android:label="@string/title_activity_hb_search_result" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbBookmarks"
            android:label="@string/title_activity_hb_bookmarks" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbColortags"
            android:label="@string/title_activity_hb_colortags" >
        </activity>
        <activity
            android:name="com.kfive.hopebook.activities.HbMoreVersions"
            android:label="@string/title_activity_hb_more_versions" >

        </activity>
    </application>

</manifest>
