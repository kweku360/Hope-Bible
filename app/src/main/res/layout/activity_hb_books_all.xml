<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bar_background">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/hb_home"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:onClick="onHome"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/hb_version"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:onClick="onVersion"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/hb_opt"
            android:layout_weight="1"
            android:background="@color/transparent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/hb_search"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:onClick="onSearch"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:id="@+id/pageinfo"
        android:gravity="center_vertical" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />


        <ViewStub
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout="@layout/empty" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="All Books"
            android:id="@+id/allbooks"
            android:layout_weight="1"
            android:background="@color/purple"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:onClick="onAllbooks"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Old testament"
            android:id="@+id/oldtestament"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@color/purple"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New testament"
            android:id="@+id/newtestament"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@color/purple"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:textColor="@color/white" />
    </LinearLayout>

