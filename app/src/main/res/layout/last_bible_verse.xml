<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Bible Verse"
        android:id="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The fear of the Lord is the beginning knowledge: but fools despise wisdom and instruction "
        android:id="@+id/lastversetext"
        android:layout_margin="20dp"
        android:textColor="@color/lightblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Proverbs 1 : 7 (KJV)"
        android:id="@+id/lastfullverse"
        android:layout_gravity="right"
        android:layout_marginRight="30dp" />
</LinearLayout>