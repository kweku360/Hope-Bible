<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apphome"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/redoctober"
        android:id="@+id/hb_hometop">

        <com.kfive.hopebible.uihelpers.AppTextViewCeporro
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HOPE BIBLE"
            android:id="@+id/hb_appnametxt"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="28dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView6"
        android:background="@color/textdark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.5">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Bible"
            android:id="@+id/hb_readbiblebtn"
            android:layout_gravity="center"
            android:background="@drawable/hb_button"
            android:textColor="@color/redoctober"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onReadBible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/hb_bgimg"
            android:background="@drawable/hbimg_cross"
            android:scaleType="fitXY"
            android:layout_gravity="right|top" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.kfive.hopebible.uihelpers.AppTextViewRoboto
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Verse"
            android:id="@+id/hb_txtlastverse"
            android:textColor="@color/redoctober" />

        <com.kfive.hopebible.uihelpers.AppTextViewRoboto
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Romans 5 : 8 &quot;For God Commended his Love for us, whiles we were yet....&quot;"
            android:id="@+id/hb_lvval"
            android:textColor="@color/redoctober"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:singleLine="true" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/imageView7"
            android:background="@color/lightgray"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dailyverse"
                    android:src="@drawable/hb_dailyverse"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:onClick="onDailyVerseClick" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Daily Verse"
                    android:id="@+id/hb_dailyverse"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hb_devotion"
                    android:src="@drawable/hb_meditation"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:onClick="onDailyDevotionClick" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Daily Devotion"
                    android:id="@+id/hb_dailydevotion"
                    android:textColor="@color/lightblack" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hb_search"
                    android:src="@drawable/hb_searchmain"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:onClick="onSearchClick" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Search"
                    android:id="@+id/hb_searchtxt"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hb_bookmark"
                    android:src="@drawable/hb_bookmark"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:onClick="onBookmarkClick" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Bookmarks"
                    android:id="@+id/textView7"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hb_theme"
                    android:src="@drawable/hb_theme"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:onClick="onThemeClick" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Themes"
                    android:id="@+id/textView8"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hb_about"
                    android:src="@drawable/hb_about"
                    android:background="@color/redoctober"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.kfive.hopebible.uihelpers.AppTextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="About"
                    android:id="@+id/textView9"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

