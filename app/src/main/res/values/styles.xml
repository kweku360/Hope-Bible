<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--here is the main custom theme for my action bar-->
    <style name="hbActionBarTheme" parent="@style/AppTheme">
        <!-- Action bar. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!--Action Bar tabs-->
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>

        <!--&lt;!&ndash;Popup menu custom styles&ndash;&gt;-->
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>



        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="actionBarTabBarStyle">@style/MyActionBarTabBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="dropDownListViewStyle">@style/MyListViewStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:icon">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="icon">@android:color/transparent</item>
        <item name="background">@color/actionbg</item>
    </style>

    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">15dp</item>

        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar Tab styles -->
    <style name="MyActionBarTab">
        <item name="android:background">@drawable/tab_bar_background</item>

          <!--support styles-->
        <item name="background">@drawable/tab_bar_background</item>
    </style>

    <style name="MyActionBarTabBar">
        <item name="android:background">@color/white</item>
        <item name="android:dividerHeight">0dp</item>



    </style>

    <style name="MyActionBarTabText">
        <item name="android:textColor">@drawable/tab_bar_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!-- Popup Menu styles -->
    <style name="MyPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">#FFF</item>
        <item name="android:dividerHeight">0px</item>
    </style>


</resources>
